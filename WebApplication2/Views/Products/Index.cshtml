@using WebApplication2.Data;
@model IEnumerable<WebApplication2.Models.Product>

@{
    ViewData["Title"] = "Index";
    Products products = new Products(Model.ToList());

}

<h1>Index</h1>


<p>
    <a asp-action="Create">Create New</a>
</p>

<p>
    Lowest price product: @products.getLowestPriceProduct().Keys.First()  @products.getLowestPriceProduct().Values.First()
</p>
<p>
    Highest price product: @products.getHighestPriceProduct().Keys.First()  @products.getHighestPriceProduct().Values.First()
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuantityInStock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BuyPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductLineNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuantityInStock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BuyPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductLineNavigation.ProductLine1)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProductCode">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ProductCode">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ProductCode">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
