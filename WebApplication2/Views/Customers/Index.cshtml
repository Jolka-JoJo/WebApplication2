@using WebApplication2.Data;
@model IEnumerable<WebApplication2.Models.Customer>

@{
    ViewData["Title"] = "Index";
    var customers = new Customers(Model.ToList());
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<p>
    Total number of records: @customers.getTotalRecordsNumber();
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                City
            </th>
            <th>
                Customers Count
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in customers.getCustomersCitiesCounts())
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Key)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Value)
                </td>
            </tr>
        }
    </tbody>
</table>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalesRepEmployeeNumberNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SalesRepEmployeeNumberNavigation.Email)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CustomerNumber">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CustomerNumber">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CustomerNumber">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
